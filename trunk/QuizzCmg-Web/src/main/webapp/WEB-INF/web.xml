<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

  <display-name>Archetype Created Web Application</display-name>
  
  <display-name>MySQL DataSource Example</display-name>
 
  <resource-ref>
	<description>MySQL Datasource example</description>
	<res-ref-name>jdbc/quizzDBb</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
  </resource-ref>
 
  <!-- Spring MVC -->
	<servlet>
		<servlet-name>QuizzCmg-Web</servlet-name>
		<servlet-class>
                    org.springframework.web.servlet.DispatcherServlet
                </servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
    <servlet-name>QuizzCmg-Web</servlet-name>
    <url-pattern>/QuizzCmg-Web/*</url-pattern>
  </servlet-mapping>
 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
 
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:commons-config.xml,classpath:quizz-config.xml,/WEB-INF/QuizzCmg-Web-servlet.xml,/WEB-INF/QuizzCmg-Web-security.xml
		</param-value>
	</context-param>

	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
	</welcome-file-list>


	<jsp-config>	    
	  <taglib>
      <taglib-uri>quizzCmgTag</taglib-uri>
      <taglib-location>/WEB-INF/tld/quizzCmg.tld</taglib-location>
    </taglib>
	</jsp-config>
  
  <!-- Spring Security -->
 <filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>
                  org.springframework.web.filter.DelegatingFilterProxy
                </filter-class>
	</filter>
 
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/QuizzCmg-Web/*</url-pattern>
	</filter-mapping> 

</web-app>

