<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
			
		.title{
			font-weight: bold;
			text-align: center;
			font-size: 16px;
			color: blue;
		}	
		.label {
			font-weight: bold;
			text-align: left;
		}
		
		.decoPanel {
			padding: 5px;
		}
		
		.hspace {
			padding: 10px;
		}
	</ui:style>
	<g:HTMLPanel>
		
		<div class="container-fluid">
			<table style='width:60%;' align='center'>
				<!--espace -->
				<tr>
					<td colspan='2' class="{style.hspace}"></td>
				</tr>

				<tr>
					<td colspan='2'>
						<strong class="{style.title}">Détail de la personne : </strong>
					</td>
				</tr>

				<!--espace -->
				<tr>
					<td colspan='2' class="{style.hspace}"></td>
				</tr>
				<!-- civilité -->
				<tr>
					<td>
						<g:Label styleName="{style.label}" text="Civilité : "></g:Label>
					</td>
					<td>
						<g:Label ui:field="civilite" ></g:Label>
					</td>
				</tr>
				<!-- Nom -->
				<tr>
					<td>
						<g:Label styleName="{style.label}" text="Nom  : "></g:Label>
					</td>
					<td>
						<g:Label ui:field="nom" ></g:Label>
					</td>
				</tr>
				<!-- Prénom -->
				<tr>
					<td>
						<g:Label styleName="{style.label}" text="Prénom : "></g:Label>
					</td>
					<td>
						<g:Label ui:field="prenom" ></g:Label>
					</td>
				</tr>
				<!-- Email -->
				<tr>
					<td>
						<g:Label styleName="{style.label}" text="Email : "></g:Label>
					</td>
					<td>
						<g:Label ui:field="email" ></g:Label>
					</td>
				</tr>
				<tr>
					<td colspan='2' class="{style.hspace}"></td>
				</tr>
				
				<tr>
					<td colspan='2'>
						<g:Button ui:field="backForm" text="Retour à la liste"></g:Button>
					</td>
				</tr>
			</table>
		</div>
				
	</g:HTMLPanel>
</ui:UiBinder> 